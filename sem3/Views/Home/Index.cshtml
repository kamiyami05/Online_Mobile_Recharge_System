@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/home.css" rel="stylesheet" />

<div class="hero-section">
    <h1>Fast & Secure Mobile Recharge</h1>
    <p>Instant mobile top-ups, bill payments, and data packages at your fingertips. Recharge anytime, anywhere!</p>

    @if (Session["CurrentUser"] == null)
    {
        <div class="features">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>Instant Recharge</h3>
                <p>Get your mobile recharged instantly with our lightning-fast processing system</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Secure Payments</h3>
                <p>Your transactions are protected with bank-level security encryption</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>All Networks</h3>
                <p>Support for all major mobile networks and service providers</p>
            </div>
        </div>

    }
    else
    {
        var user = Session["CurrentUser"] as sem3.Models.ModelViews.UserM;
        <div class="user-welcome">
            <h2>Welcome Back! <i class="fas fa-hand-wave"></i></h2>
            <div class="user-info">
                <p>Your role: <span class="role-badge">@user.Role</span></p>
                <p>Ready to recharge your mobile?</p>
            </div>
        </div>
    }
</div>