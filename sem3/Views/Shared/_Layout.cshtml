<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recharge_System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/Client/Layout")
    @Styles.Render("~/Content/Client/layout-custom")
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-bolt"></i> Recharge System
            </a>

            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home"></i> Home
                </a>
                <a class="nav-link" href="@Url.Action("Index", "AboutUS")">
                    <i class="fas fa-info-circle"></i> AboutUs
                </a>
                <a class="nav-link" href="@Url.Action("Index", "ContacUs")">
                    <i class="fas fa-phone"></i> Contact Us
                </a>
                <a class="nav-link" href="@Url.Action("Index", "Feedback")">
                    <i class="fas fa-phone"></i> Feedback
                </a>
                <a class="nav-link" href="@Url.Action("Index", "SiteMap")">
                    <i class="fas fa-phone"></i> "Site Map
                </a>


                @if (Session["CurrentUser"] != null)
                {
                    var user = Session["CurrentUser"] as sem3.Models.ModelViews.UserM;
                    <span class="nav-link">
                        <i class="fas fa-user"></i> Hello, @user.FullName
                    </span>
                }
            </div>
        </div>
    </nav>

    <div class="main-container">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-5">
        <div class="container pt-5 pb-3">
            <div class="row">

                <div class="col-md-3 mb-4">
                    <i class="fas fa-bolt"></i>
                    <p class="text-muted small">
                        Your pet's happiness is our priority. Connect, care, and create lasting memories with your furry friends.
                    </p>
                </div>

                <div class="col-md-3 mb-4">
                    <h4 class="h6 text-uppercase mb-3">Quick Links</h4>
                    <ul class="list-unstyled">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                        <li>@Html.ActionLink("About Us", "Index", "AboutUs", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                        <li>@Html.ActionLink("Post Bill Payment", "Index", "BillPayment", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                        <li>@Html.ActionLink("Online Recharge", "Index", "Recharge", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h4 class="h6 text-uppercase mb-3">Support</h4>
                    <ul class="list-unstyled">
                        <li>@Html.ActionLink("Contact Us", "Index", "ContactUs", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                        <li>@Html.ActionLink("Feedback", "Index", "Feedback", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                        <li>@Html.ActionLink("Customer Care", "Index", "CustomerCare", new { area = "" }, new { @class = "text-white text-decoration-none d-block py-1" })</li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h4 class="h6 text-uppercase mb-3">Connect</h4>
                    <div class="d-flex">
                        <a href="https://www.facebook.com/dxuan1912" target="_blank" rel="noopener noreferrer" class="btn btn-secondary me-2 p-2 rounded-circle">
                            <i class="ri-facebook-fill"></i>
                        </a>
                        <a href="https://x.com/cXun85826566" target="_blank" rel="noopener noreferrer" class="btn btn-secondary me-2 p-2 rounded-circle">
                            <i class="ri-twitter-fill"></i>
                        </a>
                        <a href="https://www.instagram.com/dxuan1912/" target="_blank" rel="noopener noreferrer" class="btn btn-secondary p-2 rounded-circle">
                            <i class="ri-instagram-line"></i>
                        </a>
                    </div>
                </div>
            </div>

            <hr class="text-white-50" />
            <div class="text-center py-4">
                <h4 class="h6 text-uppercase mb-4">Our Partners</h4>
                <div class="d-flex justify-content-center align-items-center gap-4">
                    <img src="~/Content/Images/Logo3.png" alt="Aptech Logo 2" style="max-height: 50px;" />
                </div>
            </div>

            <hr class="text-white-50" />
            <div class="text-center py-3">
                <p class="text-muted small">&copy; @DateTime.Now.Year - Online mobile recharge system. All rights reserved.</p>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>