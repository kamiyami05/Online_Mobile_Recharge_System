@model sem3.Models.ModelViews.FeedbackM
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Client/feedback.css" rel="stylesheet" />

<div class="feedback-container">
    <div class="feedback-header">
        <h1>Feedback</h1>
        <p class="subtitle">We value your opinion. Let us know how we are doing.</p>
    </div>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert-success" style="padding: 15px; margin-bottom: 20px; border-radius: 5px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb;">
            @ViewBag.SuccessMessage
        </div>
    }

    @using (Html.BeginForm("Index", "Feedback", FormMethod.Post, new { @class = "feedback-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Your Name", required = "required" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Your Email", required = "required", type = "email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="rating-label">How satisfied are you with our service?</label>
            @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })

            <div class="emoji-rating">
                @Html.RadioButtonFor(m => m.Rating, 1, new { id = "rating-1" })
                <label for="rating-1" class="emoji-option">
                    <span class="emoji">😠</span>
                    <span class="rating-text">Very Unsatisfied</span>
                </label>

                @Html.RadioButtonFor(m => m.Rating, 2, new { id = "rating-2" })
                <label for="rating-2" class="emoji-option">
                    <span class="emoji">😕</span>
                    <span class="rating-text">Unsatisfied</span>
                </label>

                @Html.RadioButtonFor(m => m.Rating, 3, new { id = "rating-3" })
                <label for="rating-3" class="emoji-option">
                    <span class="emoji">😐</span>
                    <span class="rating-text">Neutral</span>
                </label>

                @Html.RadioButtonFor(m => m.Rating, 4, new { id = "rating-4" })
                <label for="rating-4" class="emoji-option">
                    <span class="emoji">😊</span>
                    <span class="rating-text">Satisfied</span>
                </label>

                @Html.RadioButtonFor(m => m.Rating, 5, new { id = "rating-5" })
                <label for="rating-5" class="emoji-option">
                    <span class="emoji">😍</span>
                    <span class="rating-text">Very Satisfied</span>
                </label>
            </div>
        </div>

        <div class="form-group">
            @Html.TextAreaFor(m => m.FeedbackText, new { rows = 6, placeholder = "Write your feedback here...", required = "required" })
            @Html.ValidationMessageFor(m => m.FeedbackText, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="submit-btn">Submit Feedback</button>
    }
</div>
