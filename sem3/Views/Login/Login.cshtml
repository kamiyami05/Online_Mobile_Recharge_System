@model sem3.Models.ModelViews.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Client/login.css" rel="stylesheet" />

<div class="auth-container">
    <h2>Login</h2>

    @Html.ValidationSummary(false, "", new { @class = "text-red-500" })

    <form method="post" action="@Url.Action("Login", "Login")">
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Enter your phone number" required />
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-red-500" })
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" placeholder="Enter your password" required />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500" })
        </div>

        <button type="submit" class="btn1">Login</button>

        <div class="link">
            <p>Don't have an account? <a href="@Url.Action("Register", "Login")">Register now</a></p>
        </div>
    </form>
</div>
